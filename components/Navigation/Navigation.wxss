.nav {
  position: fixed;
  bottom: 200rpx;
  z-index: 999;
  transition: all ease 1s;
  height: 100rpx;
  color: #000;
  font-weight: bold;
  text-align: center;
  line-height: 100rpx;
}
.nav .nav-list {
  display: flex;
}
.nav .nav-list .icon {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  width: 50rpx;
  background-color: rgba(49, 49, 49, 0.8);
}
.nav .nav-list .nav-item {
  width: 100rpx;
  background-color: rgba(61, 60, 60, 0.625);
}
