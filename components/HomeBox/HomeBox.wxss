.homeChartBox {
  position: relative;
  display: flex;
  align-items: center;
  color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  background-color: #53A393;
}
.homeChartBox .chart {
  margin-right: 10rpx;
}
.homeChartBox .budget {
  flex: 1;
}
.homeChartBox .budget .budgetBox .title {
  font-size: 25rpx;
  font-weight: bold;
}
.homeChartBox .budget .budgetBox .info {
  display: flex;
  padding-top: 10rpx;
}
.homeChartBox .budget .budgetBox .info .row {
  flex: 1;
}
.homeChartBox .budget .budgetBox .info .row .lable {
  font-size: var(--xs-font--);
  color: #e2dcdc;
}
.homeChartBox .budget .budgetBox .info .row .value {
  font-size: 35rpx;
}
