.timeline .t-content .t-icon {
  font-size: var(--m-font--);
  margin-left: 20rpx;
  flex: 1;
}

.t-remark {
  flex: 6;
  padding-right: 100rpx;
  text-align: left;
  font-weight: bold;
}

