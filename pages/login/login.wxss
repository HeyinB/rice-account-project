/* pages/login/login.wxss */

.title {
    color: var(--color--);
}

page {
    width: 100%;
    height: 100%;
}

.logo-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100vh;
    background-color: var(--haoyuebai--);
}

.logo-w {
    overflow: hiddent;
}

.logo-img {
    width: 250rpx;
    height: 250rpx;
    margin: 0 auto;
    animation: flipInY 2s;
}

.logo-title {
    margin: 20rpx 0;
    text-align: center;
    font-size: 36rpx;
    animation: bounceInUp 2s;
}

.logo-img .img {
    width: 100%;
    height: 100%;
}

.btn {
    animation: flipInX 5s;
}